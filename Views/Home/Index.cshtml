@{
    ViewData["Title"] = "Gestión Inmobiliaria";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido al Sistema de Gestión de Inmobiliaria</h1>
    <p class="lead">Navega por las principales secciones para administrar tu agencia.</p>
</div>

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-badge-fill" style="font-size: 3rem; color: #17a2b8;"></i>
                    <h5 class="card-title mt-3">Propietarios</h5>
                    <p class="card-text">Administra la información de los dueños de los inmuebles.</p>
                    <a href="/Propietario" class="btn btn-info mt-2">Ver Propietarios</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-fill-gear" style="font-size: 3rem; color: #007bff;"></i>
                    <h5 class="card-title mt-3">Inquilinos</h5>
                    <p class="card-text">Gestiona los datos de las personas que alquilan propiedades.</p>
                    <a href="/Inquilino" class="btn btn-primary mt-2">Ver Inquilinos</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-building-fill" style="font-size: 3rem; color: #28a745;"></i>
                    <h5 class="card-title mt-3">Inmuebles</h5>
                    <p class="card-text">Explora y administra las propiedades disponibles para alquiler.</p>
                    <a href="/Inmueble" class="btn btn-success mt-2">Ver Inmuebles</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-file-earmark-text-fill" style="font-size: 3rem; color: #6c757d;"></i>
                    <h5 class="card-title mt-3">Contratos</h5>
                    <p class="card-text">Revisa y gestiona todos los contratos de alquiler vigentes.</p>
                    <a href="/Contrato" class="btn btn-secondary mt-2">Ver Contratos</a>
                </div>
            </div>
        </div>

        <div class="col">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-tag-fill" style="font-size: 3rem; color: #ffc107;"></i>
                    <h5 class="card-title mt-3">Tipos de Inmuebles</h5>
                    <p class="card-text">Administra los tipos de propiedades (casa, departamento, local, etc.).</p>
                    <a href="/TipoInmueble" class="btn btn-warning mt-2">Ver Tipos</a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill" style="font-size: 3rem; color: #dc3545;"></i>
                        <h5 class="card-title mt-3">Usuarios</h5>
                        <p class="card-text">Administra las cuentas de empleados y administradores.</p>
                        <a href="/Usuario" class="btn btn-danger mt-2">Ver Usuarios</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>