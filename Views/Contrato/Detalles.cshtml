@model _net_integrador.Models.Contrato 
@using _net_integrador.Models
@{
    ViewData["Title"] = "Auditoría del Contrato";

    var auditoriasContrato = ViewBag.AuditoriasContrato as List<Auditoria>;
    var auditoriasPagos = ViewBag.AuditoriasPagos as List<Auditoria>;
}

<div class="container mt-4">
    <h2>Auditoría del Contrato N° @Model.id</h2>
    <hr />

    <!-- Auditoría de Contrato -->
    <h4>Auditoría del Contrato</h4>
    @if (auditoriasContrato == null || !auditoriasContrato.Any())
    {
        <div class="alert alert-info">
            No se encontraron registros de auditoría para este contrato.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Fecha y Hora</th>
                    <th>Acción</th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var audit in auditoriasContrato)
                {
                    <tr>
                        <td>@audit.fecha_hora.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@audit.accion</td>
                        <td>@audit.usuario</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <hr />

    <!-- Auditoría de Pagos -->
    <h4>Auditoría de los Pagos</h4>
    @if (auditoriasPagos == null || !auditoriasPagos.Any())
    {
        <div class="alert alert-info">
            No se encontraron registros de auditoría de pagos para este contrato.
        </div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Fecha y Hora</th>
                    <th>Acción</th>
                    <th>Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var audit in auditoriasPagos)
                {
                    <tr>
                        <td>@audit.fecha_hora.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@audit.accion</td>
                        <td>@audit.usuario</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>
</div>
