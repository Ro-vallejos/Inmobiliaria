@model _net_integrador.Models.Contrato

@{
    ViewData["Title"] = "Editar Contrato";
}

<div class="container mt-4">
    <h2>Editar Contrato</h2>

    <form asp-action="Editar" method="post" class="mt-4">
        @Html.HiddenFor(m => m.id)
        @Html.HiddenFor(m => m.estado)

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="id_inquilino" class="control-label">Inquilino</label>
            <select asp-for="id_inquilino" asp-items="@ViewBag.Inquilinos" class="form-control">
                <option value="">Seleccione un inquilino</option>
            </select>
            <span asp-validation-for="id_inquilino" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
           @Html.LabelFor(m => m.fecha_inicio,"Fecha de Inicio")
           @Html.TextBoxFor(m => m.fecha_inicio, new {@class = "form-control", type = "date"})
           @Html.ValidationMessageFor(m => m.fecha_inicio, "", new { @class = "text-danger" })
        </div>
        <div class="form-group mb-3">
            @Html.LabelFor(m => m.fecha_fin,"Fecha de FinalizaciÃ³n")
            @Html.TextBoxFor(m => m.fecha_fin, new {@class = "form-control", type = "date"})
            @Html.ValidationMessageFor(m => m.fecha_fin, "", new { @class = "text-danger" })
        </div>

        @if (ViewBag.InmuebleActual != null)
        {
            <h4>Inmueble Actual</h4>
            <div class="form-group mb-3">
                <input type="hidden" asp-for="id_inmueble" />
                <input type="hidden" asp-for="monto_mensual" />
                <p class="form-control-static">
                    @ViewBag.InmuebleActual.direccion - @ViewBag.InmuebleActual.ambientes amb.
                </p>
                <p class="form-control-static">
                    Monto: $@Model.monto_mensual
                </p>
            </div>
        }
        
        <div class="form-group mt-2">
            <label for="monto_mensual">Monto Mensual</label>
            <input asp-for="monto_mensual" class="form-control" type="number" step="0.01"/>
            <span asp-validation-for="monto_mensual" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    </form>
</div>