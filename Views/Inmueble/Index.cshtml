@model IEnumerable<_net_integrador.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
    var propietarioIdSeleccionado = ViewBag.PropietarioId as int?;
}

@if (TempData["Exito"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Exito"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Lista de Inmuebles</h1>
</div>

<p>
    <a class="btn btn-success" asp-action="Agregar">Agregar Inmueble</a>
</p>

<div class="d-flex align-items-center mb-3">
    <label for="propietarioSelect" class="me-2">Filtrar por propietario:</label>
    <select id="propietarioSelect" class="form-select me-2" asp-items="@ViewBag.Propietarios">
        <option value="">Todos los propietarios</option>
    </select>
    <button id="btnFiltrar" class="btn btn-primary">Filtrar</button>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Código</th>
            <th>Propietario</th>
            <th>Dirección</th>
            <th>Uso</th>
            <th>Tipo</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.id</td>
                <td>@i.propietario?.NombreCompleto</td>
                <td>@i.direccion</td>
                <td>@i.uso</td>
                <td>@i.tipoInmueble?.tipo</td>
                <td>@(i.precio.HasValue ? $"${i.precio.Value:0.00}" : "Sin precio")</td>
                <td>@i.estado</td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = i.id }, new { @class = "btn btn-primary btn-sm" })
                @if (i.estado == Estado.Disponible)
                    {
                        @Html.ActionLink(
                            "Suspender",
                            "Suspender",
                            new { id = i.id },
                            new { @class = "btn btn-warning btn-sm", onclick = "return confirm('¿Seguro que querés suspender este inmueble?');" })
                    }
                    else if (i.estado == Estado.Suspendido)
                    {
                        @Html.ActionLink(
                            "Activar",
                            "Activar",
                            new { id = i.id },
                            new { @class = "btn btn-success btn-sm", onclick = "return confirm('¿Seguro que querés activar este inmueble?');" })
                    }


                    @Html.ActionLink("Detalles", "Detalles", new { id = i.id }, new { @class = "btn btn-info btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        var propietarioSelect = document.getElementById("propietarioSelect");
        var seleccionado = '@(propietarioIdSeleccionado?.ToString() ?? "")';
        if (seleccionado) {
            propietarioSelect.value = seleccionado;
        }

        document.getElementById("btnFiltrar").addEventListener("click", function () {
            var propietarioId = propietarioSelect.value;
            if (propietarioId) {
                window.location.href = '@Url.Action("PorPropietario", "Inmueble")' + '?propietarioId=' + propietarioId;
            } else {
                window.location.href = '@Url.Action("Index", "Inmueble")';
            }
        });
    </script>
}