@model List<_net_integrador.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<div class="container mt-4">
    <h2>Lista de Usuarios</h2>
    <a asp-action="Agregar" class="btn btn-primary my-3">Agregar Nuevo Usuario</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].id)</th>
                <th>@Html.DisplayNameFor(model => model[0].nombre)</th>
                <th>@Html.DisplayNameFor(model => model[0].email)</th>
                <th>@Html.DisplayNameFor(model => model[0].password)</th>
                <th>@Html.DisplayNameFor(model => model[0].rol)</th>
                <th>@Html.DisplayNameFor(model => model[0].estado)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => usuario.id)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.nombre)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.email)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.password)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.rol)</td>
                    <td>@Html.DisplayFor(modelItem => usuario.estado)</td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@usuario.id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@usuario.id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
