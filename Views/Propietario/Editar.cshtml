@model _net_integrador.Models.Propietario

@{
    ViewBag.Title = "Editar Propietario";
}

<h2>Editar Propietario</h2>

@if (TempData["Exito"] != null)
{
    <script>
         alert('@TempData["Exito"]');
    </script>
    
}

@using (Html.BeginForm("Editar", "Propietario", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id)
    @Html.HiddenFor(m => m.estado)
    @Html.HiddenFor(m => m.password)


    <div class="form-group">
        @Html.LabelFor(m => m.nombre)
        @Html.TextBoxFor(m => m.nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.apellido)
        @Html.TextBoxFor(m => m.apellido, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.dni)
        @Html.TextBoxFor(m => m.dni, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.email)
        @Html.TextBoxFor(m => m.email, new { @class = "form-control", type="email" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.telefono)
        @Html.TextBoxFor(m => m.telefono, new { @class = "form-control" })
    </div>

    <button type="post" class="btn btn-primary">Guardar</button>

}
